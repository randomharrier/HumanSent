# ===========================================
# HumanSent Agents - Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# ---------------------------------------------
# Inngest
# ---------------------------------------------
INNGEST_EVENT_KEY=your_inngest_event_key
INNGEST_SIGNING_KEY=your_inngest_signing_key

# ---------------------------------------------
# Supabase
# ---------------------------------------------
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your_service_role_key

# ---------------------------------------------
# Anthropic (Claude)
# ---------------------------------------------
ANTHROPIC_API_KEY=sk-ant-your-key

# ---------------------------------------------
# Gmail API (Google Workspace)
# ---------------------------------------------
# Option A: Service Account (recommended for server-to-server)
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Option B: OAuth (for per-user access)
# GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
# GOOGLE_CLIENT_SECRET=your-client-secret

# Domain-wide delegation subject (which user to impersonate)
# Not needed if tokens stored per-agent
# GOOGLE_DELEGATED_USER=admin@humansent.co

# ---------------------------------------------
# Slack
# ---------------------------------------------
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=your-signing-secret

# ---------------------------------------------
# Agent Configuration
# ---------------------------------------------
# Timezone for business hours calculation
AGENT_TIMEZONE=America/Los_Angeles

# Tick interval in minutes (default: 30)
AGENT_TICK_INTERVAL_MINUTES=30

# Business hours (24h format)
AGENT_BUSINESS_HOURS_START=9
AGENT_BUSINESS_HOURS_END=17

# Enable/disable agents (comma-separated list, empty = all enabled)
# DISABLED_AGENTS=karen-customer,robert-legal

# ---------------------------------------------
# Feature Flags
# ---------------------------------------------
# Dry run mode - logs actions but doesn't execute
DRY_RUN_MODE=false

# Enable Precedent integration (use_precedent action)
ENABLE_PRECEDENT_INTEGRATION=true
